{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "UMD",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "moduleResolution": "node",
    "stripInternal": true,
    "preserveConstEnums": true,
    "listFiles": true,
    "declaration": true,
    "removeComments": true,
    "lib": ["es2015", "dom"]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "files": [
    "./src/index.ts"
  ]
}
